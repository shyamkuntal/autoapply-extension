{
  "manifest_version": 3,
  "name": "LinkedIn Hiring Post Collector",
  "version": "4.2",
  "update_url": "https://autoapply.ranyor.com/extension/update.xml",
  "description": "Collect LinkedIn posts that contain hiring keywords and export as JSON. Works on feed and search result pages.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.autoapply.ranyor.com/*"
  ],
  "icons": {
    "16": "icons/icon161.png",
    "48": "icons/icon481.png",
    "128": "icons/icon1281.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Hiring Collector",
    "default_icon": {
      "16": "icons/icon161.png",
      "48": "icons/icon481.png",
      "128": "icons/icon1281.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}