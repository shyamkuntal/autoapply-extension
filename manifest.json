{
  "manifest_version": 3,
  "name": "LinkedIn Hiring Post Collector",
  "version": "4.2",
  "description": "Collect LinkedIn posts that contain hiring keywords and export as JSON. Works on feed and search result pages.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Hiring Collector"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}